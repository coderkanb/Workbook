<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kb.workbook.activity.ImageTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/test_et_image_size"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            />

        <Button
            android:id="@+id/test_thumb_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1倍"
            />

        <Button
            android:id="@+id/test_thumb_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.3倍"
            />

        <Button
            android:id="@+id/test_thumb_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0倍"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/test_image1_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f00"
                />

            <ImageView
                android:id="@+id/test_image2_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0f0"
                />

            <ImageView
                android:id="@+id/test_image3_src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0f0"
                android:src="@mipmap/street"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
