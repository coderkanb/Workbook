<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.bookdevart.BookDevArtActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1. 异常启动旋转屏幕"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:onClick="onScreenChange"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1.2启动模式"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:onClick="onLaunchMode"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="第三章 View的事件体系"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:onClick="toEvent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="View的事件传递"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:onClick="toEvent2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="第8章 理解Window和WindowManager"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:onClick="toWindow"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
